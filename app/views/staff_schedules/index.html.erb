<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Staff schedules" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Staff schedules</h1>
    <%= link_to "New staff schedule", new_staff_schedule_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="staff_schedules" class="min-w-full">
    <% @staff_schedules.each do |staff_schedule| %>
      <%= render staff_schedule %>
      <p>
        <%= link_to "Show this staff schedule", staff_schedule, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
