<div id="<%= dom_id menu_item %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Item name:</strong>
    <%= menu_item.item_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= menu_item.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= menu_item.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Popularity score:</strong>
    <%= menu_item.popularity_score %>
  </p>

</div>
