<div id="<%= dom_id inventory %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Item name:</strong>
    <%= inventory.item_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= inventory.quantity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Reorder level:</strong>
    <%= inventory.reorder_level %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Supplier:</strong>
    <%= inventory.supplier_id %>
  </p>

</div>
