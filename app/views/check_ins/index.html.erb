<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Check ins" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Check ins</h1>
    <%= link_to "New check in", new_check_in_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="check_ins" class="min-w-full">
    <% @check_ins.each do |check_in| %>
      <%= render check_in %>
      <p>
        <%= link_to "Show this check in", check_in, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
